<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tp_calc_bg"
    android:orientation="vertical"
    tools:context=".CalculatorActivity">

    <LinearLayout
        android:id="@+id/linear01"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight=".25"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@color/tp_display_bg"
            android:fontFamily="@font/digital"
            android:gravity="center|end"
            android:padding="10dp"
            android:text="@string/display"
            android:textColor="@color/tp_display_txt"
            android:textSize="60sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear02"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight=".75"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/linear02_1"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnC"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".81"
                android:background="@color/tp_btn_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/btn_C"
                android:textAlignment="center"
                android:textColor="@color/tp_btn_txt"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnSum"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight=".26"
                android:background="@color/tp_btn_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/btn_sum"
                android:textAlignment="center"
                android:textColor="@color/tp_btn_txt"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear02_2"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/tp_btn_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/btn_7"
                android:textAlignment="center"
                android:textColor="@color/tp_btn_txt"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn8"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/tp_btn_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/btn_8"
                android:textAlignment="center"
                android:textColor="@color/tp_btn_txt"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn9"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/tp_btn_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/btn_9"
                android:textAlignment="center"
                android:textColor="@color/tp_btn_txt"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnSub"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/tp_btn_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/btn_sub"
                android:textAlignment="center"
                android:textColor="@color/tp_btn_txt"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear02_3"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/tp_btn_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/btn_4"
                android:textAlignment="center"
                android:textColor="@color/tp_btn_txt"
                android:textSize="18sp" />

            <Button
